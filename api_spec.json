{
  "openapi": "3.1.0",
  "info": {
    "title": "Category RESTful API",
    "description": "Api spec for category API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local server"
    }
  ],

  "paths": {
    "/categories": {
      "get": {
        "tags": ["Category API"],
        "description": "To get all categories",
        "responses": {
          "200": {
            "description": "Success get all category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status":{
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "number"
                            },
                            "name": {
                              "type": "string"
                            }
                          }
                        }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {

      }
    }
  }
}
